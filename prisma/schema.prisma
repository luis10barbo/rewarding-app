// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Reward {
  idReward String @unique @default(cuid())
  idUser   String

  nameReward  String
  valueReward Float

  User User   @relation(fields: [idUser], references: [idUser])
  Goal Goal[]
}

model Goal {
  idGoal   String  @unique @default(cuid())
  idReward String?
  idUser   String

  nameGoal        String
  descriptionGoal String?
  goalSteps       GoalStep[]
  reward          Reward?    @relation(fields: [idReward], references: [idReward])

  completed  Boolean
  user       User    @relation(fields: [idUser], references: [idUser])
  userIdUser String?
}

model GoalStep {
  idGoalStep String @unique @default(cuid())
  idGoal     String

  contentStep String
  goal        Goal   @relation(fields: [idGoal], references: [idGoal], onDelete: Cascade)

  completed Boolean
}

model Session {
  idSession String  @id @unique
  idUser    String?

  user User?
}

model User {
  idUser       String  @unique @default(cuid())
  idSession    String? @unique
  nicknameUser String  @unique

  passwordUser String

  balanceUser Float

  goals   Goal[]
  reward  Reward[]
  session Session? @relation(fields: [idSession], references: [idSession], onDelete: Cascade)
}
